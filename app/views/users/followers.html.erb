<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h2>followers Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image ,class:"attachment user profile_image", fallback:"no_image.jpg",size: "40x40" %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  フォロー数：<%= user.following.count %>
                </td>
                <td>
                  フォロワー数：<%= user.followers.count %>
                </td>
              <% if current_user.following?(user) %>
                <td>
                  <%= link_to "フォローを外す", user_relationships_path(user.id) , method: :delete%>
                </td>
              <% else %>
                <td>
                  <%= link_to "フォローする", user_relationships_path(user.id) , method: :post%>
                </td>
              <% end %>
                <td>
                  <%= link_to "Show" , user_path(user.id) ,class:"user_16454" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>