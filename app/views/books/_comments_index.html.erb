<% user_book_comments.each do |book_comment| %>
  <div class="comment">
    <%= attachment_image_tag book_comment.user, :profile_image ,class:"attachment user profile_image fallback" ,format: 'jpeg', fallback:"no_image.jpg",size: "40x40" %>
    <%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <%= link_to "Delete", book_book_comment_path(book_comment.book, book_comment) , method: :delete , class:"btn-sm btn-danger destroy_book_26656", remote: true %>
    <% end %>
    <br>
    <%= book_comment.user.name %>
  </div>
  <% end %>