<body>
<div class="container">
      <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
  <div class="row">
    <%= render 'users/new' , user: @user , book:@book %>

  <div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
		  <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user_book.user_id) do %>
              <%= attachment_image_tag @user_book.user, :profile_image ,class:"attachment user profile_image fallback" ,format: 'jpeg', fallback:"no_image.jpg",size: "40x40" %>
              <br>
              <%= @user_book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@user_book.id) do %>
            <%= @user_book.title %>
            <% end %>
          </td>
          <td>
            <%= @user_book.body %>
          </td>
          <% if @user_book.user_id == @user.id %>
          <td>
              <%= link_to "Edit" , edit_book_path(@user_book.id) , class:"btn-sm btn-success edit_book_26656" %>
          </td>
          <% end %>
          <% if @user_book.user_id == @user.id %>
          <td>
              <%= link_to "Destroy", book_path(@user_book.id) ,method: :delete, class:"btn-sm btn-danger destroy_book_26656", data: { confirm: "本当に消しますか？" }  %>
          </td>
          <% end %>
          <td>
            <% if @user_book.favorited_by?(current_user) %>
              <li>
                <%= link_to book_favorites_path(@user_book), method: :delete do %>
                  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                  <%= @user_book.favorites.count%>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to book_favorites_path(@user_book), method: :post do %>
                  <i class="fa fa-heart-o" aria-hidden="true"></i>
                  <%= @user_book.favorites.count %>
                <% end %>
              </li>
            <% end %>
          </td>
          <td>
            コメント数：<%= @user_book.book_comments.count %>
          </td>
        </tr>  
      </tbody>
    </table>
            <% @user_book.book_comments.each do |book_comment| %>
            <div class="comment">
              <%= attachment_image_tag book_comment.user, :profile_image ,class:"attachment user profile_image fallback" ,format: 'jpeg', fallback:"no_image.jpg",size: "40x40" %>
              <%= book_comment.comment %>
              <% if book_comment.user == current_user %>
                <%= link_to "Delete", book_book_comment_path(book_comment.book, book_comment) , method: :delete , class:"btn-sm btn-danger destroy_book_26656"%>
              <% end %>
              <br>
              <%= @user_book.user.name %>
            </div>
        <% end %>
            <%= form_for(@book_comment, url:book_book_comments_path(params[:id])) do |f| %>
          <%= f.text_area :comment , rows:"5",class: "form-control"%>
          <%= f.submit "送信"%>
        <% end %>
  </div>
</div>
</body>